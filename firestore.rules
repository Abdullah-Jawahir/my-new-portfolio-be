rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email != null;
    }
    
    // Profile - public read, admin write
    match /profile/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Stats - public read, admin write
    match /stats/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Contact Info - public read, admin write
    match /contactInfo/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Social Links - public read, admin write
    match /socialLinks/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Skill Categories - public read, admin write
    match /skillCategories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Additional Skills - public read, admin write
    match /additionalSkills/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Projects - public read, admin write
    match /projects/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Education - public read, admin write
    match /education/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Messages - public create (contact form), admin read/write
    match /messages/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
